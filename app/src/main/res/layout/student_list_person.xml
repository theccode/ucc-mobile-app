<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    android:elevation="3dp"
    app:cardMaxElevation="5dp"
    cardview:cardCornerRadius="5dp"
    android:layout_margin="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProfileImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:civ_border_width="1dp"
                app:civ_border_color="#FF233F8F"
                android:src="@drawable/students" />
            <TextView
                android:id="@+id/tvDepartmentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Betty Ablorh"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="22dp"
                android:layout_toEndOf="@id/ivProfileImage"
                android:paddingStart="15dp"
                android:layout_toRightOf="@id/ivProfileImage"
                android:paddingLeft="15dp" />
            <TextView
                android:id="@+id/tvDepartmentCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PS/CSC/17/0027"
                android:layout_below="@+id/tvDepartmentName"
                android:layout_toEndOf="@id/ivProfileImage"
                android:paddingStart="15dp"
                android:layout_toRightOf="@id/ivProfileImage"
                android:paddingLeft="15dp" />
            <TextView
                android:id="@+id/tvSemester"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level: 400"
                android:layout_below="@+id/tvDepartmentCode"
                android:layout_toEndOf="@id/ivProfileImage"
                android:paddingStart="15dp"
                android:layout_toRightOf="@id/ivProfileImage"
                android:paddingLeft="15dp" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
