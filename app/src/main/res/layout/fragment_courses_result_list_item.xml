<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    android:elevation="3dp"
    app:cardMaxElevation="5dp"
    cardview:cardCornerRadius="5dp"
    android:layout_margin="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <ImageView
                android:id="@+id/ivCourseIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/course_icon"/>
            <TextView
                android:id="@+id/tvCourseTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Name"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="22dp"
                android:layout_toEndOf="@id/ivCourseIcon"
                android:paddingStart="15dp"
                android:layout_toRightOf="@id/ivCourseIcon"
                android:paddingLeft="15dp" />
            <TextView
                android:id="@+id/tvCourseCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Code"
                android:layout_below="@+id/tvCourseTitle"
                android:layout_toEndOf="@id/ivCourseIcon"
                android:paddingStart="15dp"
                android:layout_toRightOf="@id/ivCourseIcon"
                android:paddingLeft="15dp" />
            <TextView
                android:id="@+id/tvCreditHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credit Hours"
                android:layout_below="@+id/tvCourseCode"
                android:layout_toEndOf="@id/ivCourseIcon"
                android:paddingStart="15dp"
                android:layout_toRightOf="@id/ivCourseIcon"
                android:paddingLeft="15dp" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
